#include "inverter.h"
#include<string.h>

char **
enviar_1_svc(char **argp, struct svc_req *rqstp)
{
	/* Declaracao das variaveis */
	static char *result;
	char *msg_inv;
	int i,tam;
	
	/* Pegando tamanho da mensagem informada */
	tam = strlen(*argp);
	/* Alocando espaco na memoria */
	msg_inv = malloc((sizeof(char)*tam)+1);	

	printf("Mensagem recebida do Cliente: %s\n", *argp,tam);
	
	/* Realizando criptografia com chave fixa */
	
	

	for(i=tam-1;i>=0;i--)
	{	
		msg_inv[tam-i-1] = *(*argp+i);	
		
	}
	msg_inv[tam]='\0';

	printf("Mensagem criptografada do Cliente: %s\n", msg_inv);

	result = msg_inv;

	return &result;
}
